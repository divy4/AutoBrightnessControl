<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.tab.SettingsTab">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Override switch -->
        <Switch
            android:id="@+id/enableControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/enable_control"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <!-- Graph enable -->


        <!-- Default brightness -->


        <!-- Update frequency -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/updateFreqTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/update_freq_title"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <Space
                android:layout_width="@dimen/title_value_space_width"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/updateFreqDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/updateFreqValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="@integer/seekBarMax" />

        <!-- Transition time -->

    </LinearLayout>

</FrameLayout>